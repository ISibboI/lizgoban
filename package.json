{
  "name": "LizGoban",
  "version": "0.4.0-pre3",
  "description": "An analysis tool of the game Go with Leela Zero and KataGo",
  "author": "kaorahi <khi@users.osdn.me>",
  "license": "GPL-3.0",
  "main": "./src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaorahi/lizgoban"
  },
  "dependencies": {
    "@sabaki/sgf": "^3.4.4",
    "electron-store": "^5.1.1",
    "tmp": "^0.1.0"
  },
  "devDependencies": {
    "electron": "^8.0.1",
    "electron-builder": "^22.3.2"
  },
  "build": {
    "files": [
      "src/{*.js,*.html,*.css,*.png}"
    ],
    "extraFiles": [
      {
        "from": "build_with",
        "to": "resources/external",
        "filter": [
          "config.json"
        ]
      },
      {
        "from": "build_with/bin/common",
        "to": "resources/external",
        "filter": [
          "lznetwork.gz",
          "katanetwork.bin.gz"
        ]
      }
    ],
    "linux": {
      "target": "AppImage",
      "category": "Game",
      "extraFiles": [
        {
          "from": "build_with/bin/linux",
          "to": "resources/external",
          "filter": [
            "leelaz",
            "katago"
          ]
        }
      ]
    },
    "win": {
      "target": "portable",
      "extraFiles": [
        {
          "from": "build_with/bin/win",
          "to": "resources/external",
          "filter": [
            "leelaz/{leelaz.exe,*.dll}",
            "katago/{katago.exe,*.dll,default_gtp.cfg}"
          ]
        }
      ]
    }
  },
  "scripts": {
    "start": "electron .",
    "build_lin": "electron-builder -l --x64",
    "build_win": "electron-builder -w --x64"
  }
}
