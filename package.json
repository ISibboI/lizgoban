{
  "name": "LizGoban",
  "version": "0.2.0-pre1",
  "description": "An analysis tool of the game Go with Leela Zero and KataGo",
  "author": "kaorahi <khi@users.osdn.me>",
  "license": "GPL-3.0",
  "main": "./src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaorahi/lizgoban"
  },
  "dependencies": {
    "@sabaki/sgf": "^3.2.1",
    "electron-store": "^3.0.0",
    "tmp": "^0.0.33"
  },
  "devDependencies": {
    "electron": "^4.1.0",
    "electron-builder": "^21.2.0"
  },
  "build": {
    "files": [
      "src/{*.js,*.html,*.png}"
    ],
    "extraFiles": [
      {
        "from": "tmp_extra",
        "to": "resources/external",
        "filter": ["config.json", "lznetwork.gz", "katanetwork.gz", "katago_gtp.cfg"]
      }
    ],
    "linux": {
      "target": "AppImage",
      "category": "Game",
      "extraFiles": [
        {
          "from": "tmp_extra/linux",
          "to": "resources/external",
          "filter": ["leelaz", "katago"]
        }
      ]
    },
    "win": {
      "target": "portable",
      "extraFiles": [
        {
          "from": "tmp_extra/win",
          "to": "resources/external",
          "filter": ["leelaz/{leelaz.exe,*.dll}", "katago/{katago.exe,*.dll}"]
        }
      ]
    }
  },
  "scripts": {
    "start": "electron .",
    "build_lin": "electron-builder -l --x64",
    "build_win": "electron-builder -w --x64"
  }
}
